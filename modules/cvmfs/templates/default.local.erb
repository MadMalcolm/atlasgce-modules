#
#  Local configuration file for cvmfs
#
CVMFS_REPOSITORIES=<%= @repositories %>
<% if @quota -%>
CVMFS_QUOTA_LIMIT=<%= @quota %>
<% end -%>
<% if @squidproxy -%>
CVMFS_HTTP_PROXY="<%= @squidproxy %>"
<% else -%>
CVMFS_HTTP_PROXY="auto"
<% end -%>
CVMFS_CACHE_BASE=<%= @cachedir %>
<% if @debug -%>
CVMFS_DEBUGLOG=<%= @logdir %>/cvmfs.log
<% end -%>
